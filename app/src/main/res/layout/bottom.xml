<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/tabBackGround"
    >
    <LinearLayout
        android:id="@+id/tab_banke"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_banke"
            style="@style/menuIconStyle"
            android:src="@drawable/creative" />

        <TextView
            android:id="@+id/tv_banke"
            style="@style/menuTextStyle"
            android:text="班课" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_discover"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_discover"
            style="@style/menuIconStyle"
            android:src="@drawable/discover" />

        <TextView
            android:id="@+id/tv_discover"
            style="@style/menuTextStyle"
            android:text="发现" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_mine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_mine"
            style="@style/menuIconStyle"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/tv_mine"
            style="@style/menuTextStyle"
            android:text="我的" />
    </LinearLayout>
</LinearLayout>