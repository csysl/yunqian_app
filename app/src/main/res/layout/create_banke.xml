<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="57dp"
            android:layout_height="62dp"
            android:src="@drawable/createbanke" />


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="班课封面"
            android:textColor="@color/gray"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:text="班级"
            android:gravity="left"
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/creat_class"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="@null"
            android:hint="未设置"
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="@color/slightgray"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:text="课程"
            android:gravity="left"
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/creat_course"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="@null"
            android:hint="未设置"
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="@color/slightgray"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:text="类型"
        android:textColor="@color/slightgray"
        />

    <LinearLayout
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:text="学校课表班课"
            android:gravity="left"
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="@color/slightgray"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="15dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="学校课表班课就是学校安排课程里的正式班课"
        android:textColor="@color/slightgray"
        />

    <LinearLayout
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:text="云教材"
            android:gravity="left"
            android:textSize="15dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/creat_yunjiaocai"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="@null"
            android:hint="未设置"
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="@color/slightgray"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="15dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="展开设置学校，院系，所属学期等其他信息"
        android:textColor="@color/slightgray"
        />

    <Button
        android:id="@+id/creat"
        android:layout_marginTop="15dip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="创建"
        />

</LinearLayout>




