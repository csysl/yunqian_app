<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_bar_with_help" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/mine_detail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/touxiang" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/user_name"
                android:layout_width="230dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="张三"
                android:gravity="left"
                android:textSize="15dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/jiantou1" />
        </LinearLayout>
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:text="30"
                android:textColor="@color/textColor"
                android:gravity="center"
                />

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="经验值"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:text="0"
                android:textColor="@color/textColor"
                android:gravity="center"
                />

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="魅力值"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:text="0"
                android:textColor="@color/textColor"
                android:gravity="center"
                />

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="蓝豆"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/textColor"
                android:text="0"
                android:gravity="center"
                />

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="心意"
                android:gravity="center"
                />


        </LinearLayout>
    </LinearLayout>





    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/my_zoom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_marginLeft="42dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/space"
                />

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:text="我的空间"
                android:gravity="center"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_collection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_marginLeft="42dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/collect"
                />

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:text="我的收藏"
                android:gravity="center"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/my_heart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_marginLeft="42dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/card"
                />

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:text="心意卡片"
                android:gravity="center"
                />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/my_setting"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/set" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:text="设置"
            android:gravity="right"
            android:textSize="15dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/my_details"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/detail" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:text="详情"
            android:gravity="right"
            android:textSize="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/my_contact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/aboutus" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:text="关于我们"
            android:gravity="right"
            android:textSize="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/logout" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:text="退出登录"
            android:gravity="right"
            android:textSize="15dp"
            />
    </LinearLayout>




</LinearLayout>